services:
  php:
    build:
      target: develop
      args:
        HOST_UID: 9000
    environment:
      - PHP_IDE_CONFIG=serverName=devserver
    volumes:
      - ./:/var/www/html/app
      - ./docker/php/assets/xdebug.ini:/usr/local/etc/php/conf.d/zz-xdebug.ini

  web:
    working_dir: /var/www/html/app
    volumes:
      - ./:/var/www/html/app
      - ./docker/nginx/conf.d:/etc/nginx/conf.d/default.conf
    ports:
      - "8080:80"

  mysql:
    ports:
      - "127.0.0.1:3306:3306"